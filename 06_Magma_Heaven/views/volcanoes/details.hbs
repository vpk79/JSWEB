
        <section id="details-info">
            <h1>Details</h1>
            <div class="volcano-image">
                <img src="{{image}}">
            </div>

            <div class="volcano-info">
                <div class="volcano-text">
                    <h1 id="name">{{name}}</h1>
                    <h3 id="location">Location: {{location}}</h3>
                    <p id="type">Volcano Type: {{typeVolcano}}</p>
                    <p id="elevation"><span>Elevation: {{elevation}}m</span></p>
                    <p id="last-eruption">Year of Last Eruption: {{lastEruption}}</p>
                    <p id="votes">Vote's Count: {{votedUsers}}</p>
                    <p id="description">{{description}}</p>
                </div>
                <div class="product-btn">
                    <!--Only for registered user and author of the publication -->
                    {{#if isAuthenticated}}
                        {{#if isOwner}}
                    <div class="author">
                        <a href="/volcanoes/{{_id}}/edit" class="btn-edit">Edit</a>
                        <a href="/volcanoes/{{_id}}/delete" class="btn-delete">Delete</a>
                    </div>
                        {{/if}}
                        {{#unless isOwner}}
                             {{#unless isVoted}}
                    <!-- Logged in user who has not yet vote for this volcano-->
                    <a href="/volcanoes/{{_id}}/vote" class="btn-vote">Vote</a>
                             {{else}}
                    <!-- Logged in user who has already vote for this volcano-->
                    <p class="vote-message">You've already voted for this volcano!</p>
                                {{/unless}}
                        {{/unless}}
                    {{/if}}
                </div>
            </div>
        </section>
